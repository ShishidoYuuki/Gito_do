<!-- app/views/registrations/new.html.erb -->


<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "box" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<h2>サインアップ</h2>
  <div class="box-inner">
    <div class="box-email">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "box-email-input" %>
    </div>

    <div class="box-password">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "box-password-input" %>
    </div>

    <div class="box-password">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "box-password-input" %>
    </div>

    <div class="box-login">
      <%= f.submit "サインアップ", class: "box-login-btn" %>
    </div>
<%= render "devise/shared/links" %>

  </div>
<% end %>

